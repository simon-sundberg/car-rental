@page "/"
@using Car_Rental.Business.Classes;
@inject BookingProcessor bp;

<PageTitle>Car Rental</PageTitle>

<h1>Car Rental</h1>

<table style="max-width: 1100px;" class="table table-bordered table-hover caption-top">
    <caption>Vehicles</caption>
    <thead>
        <tr>
            <th>Registration Number</th>
            <th>Make</th>
            <th>Odometer</th>
            <th>Cost / Km</th>
            <th>Type</th>
            <th>Cost / Day</th>
            <th>Status</th>
        </tr>
    </thead>
    @foreach (var vehicle in bp.GetVehicles())
    {
        <tbody>
            <tr>
                <td class="fw-bold">@vehicle.RegNo</td>
                <td>@vehicle.Make</td>
                <td>@vehicle.Odometer</td>
                <td>@vehicle.CostKm</td>
                <td>@vehicle.Type</td>
                <td>@vehicle.CostDay</td>
                <td>
                    <span class="badge @(vehicle.Status == VehicleStatuses.Available ? "text-bg-dark" : "text-bg-danger")">
                        @vehicle.Status
                    </span>
                </td>
            </tr>
        </tbody>
    }
</table>

<table style="max-width: 1100px;" class="table table-bordered table-hover caption-top">
    <caption>Customers</caption>
    <thead>
        <tr>
            <th>SSN</th>
            <th>Last Name</th>
            <th>First Name</th>
 
        </tr>
    </thead>
    @foreach (var customer in bp.GetCustomers())
    {
        <tbody>
            <tr>
                <td class="fw-bold">@customer.SSN</td>
                <td>@customer.LastName</td>
                <td>@customer.FirstName</td>
            </tr>
        </tbody>
    }
</table>